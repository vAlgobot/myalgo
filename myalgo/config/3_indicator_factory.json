    "volatility_indicators": {
      "bollinger_bands": {
        "enabled": false,
        "description": "Bollinger Bands",
        "timeframe": "5m",
        "config": {
          "period": 20,
          "std_dev": 2
        }
      }
    },
    
    "support_resistance": {
      "cpr": {
        "enabled": true,
        "description": "Central Pivot Range",
        "timeframes": ["D", "W"],
        "available_timeframes": {
          "D": "Daily",
          "W": "Weekly",
          "M": "Monthly"
        }
      }
    }
